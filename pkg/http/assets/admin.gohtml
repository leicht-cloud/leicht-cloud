<html>

<head>
  <link href="/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <link href="/css/xterm.css" rel="stylesheet" crossorigin="anonymous">
  <script src="/js/lib/bootstrap.bundle.min.js"></script>
  <script src="/js/lib/jquery.min.js"></script>
  <script src="/js/lib/xterm.min.js"></script>

  {{ navbar .Navbar }}

  <style>
    .wrapper {
      display: flex;
      align-items: stretch;
    }

    #sidebar {
      min-width: 250px;
      max-width: 250px;
    }
  </style>
</head>

<body>
  <div class="container wrapper">
    <nav class="ps-0" id="sidebar">
      <ul>
        <a href="/admin/userlist">Users</a>
      </ul>
      <ul class="list-group">
        <a class="list-group-item d-flex justify-content-between align-items-center collapsed" data-bs-toggle="collapse"
          data-bs-target="#plugins-collapse" aria-expanded="true">
          Plugins
          <span class="badge bg-primary rounded-pill">{{ len .Plugins }}</span>
        </a>
        <div class="collapse show" id="plugins-collapse">
          <ul class="list-group-item fw-normal pb-1 small">
            {{ range $i, $plugin := .Plugins }}
            <li><a href="/admin/plugin/{{ $plugin }}" class="link-dark rounded">{{ $plugin }}</a></li>
            {{ end }}
          </ul>
        </div>
      </ul>
    </nav>
    <div id="content">
      {{ if eq .Page "plugin" }}
      <h1 class="h2">{{ .PluginView.Name }}</h1>
      <div id="terminal"></div>
      <script>
        var term = new Terminal();
        term.open(document.getElementById('terminal'));
        term.setOption('convertEol', true);
        term.setOption('disableStdin', true);

        var socket = new WebSocket("ws://" + document.location.host + "/admin/plugin/stdout?name={{ .PluginView.Name }}");
        socket.onmessage = function(event) {
          term.write(event.data);
        };
      </script>
      {{ else if eq .Page "userlist" }}
      <h1 class="h2">Users</h1>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Email</th>
          </tr>
        </thead>
        <tbody>
          {{ range $user := .UserList.Users }}
          <tr>
            <td scope="row"><a href="/admin/user/{{ $user.ID }}">{{ $user.Email }}</a></td>
          </tr>
          {{ end }}
        </tbody>
      </table>
      {{ else if eq .Page "user" }}
      <h1 class="h2">{{ .UserView.User.Email }}</h1>

      <div style="border:1px">
        <h2 class="h3">Upload limit</h2>
        <form name="upload_limit" class="input-group mb-3" method="POST">
          <input type="text" class="form-control" name="upload_limit_number" value="{{ .UserView.UploadLimitHuman.Number }}" />
          <select class="form-select" name="upload_limit_metric">
            <option value="unlimited" {{ if .UserView.UploadLimit.Unlimited }}selected{{ end }}>Unlimited</option>
            <option value="kbps" {{ if eq .UserView.UploadLimitHuman.Metric "kbps" }}selected{{ end }}>KB/s</option>
            <option value="mbps" {{ if eq .UserView.UploadLimitHuman.Metric "mbps" }}selected{{ end }}>MB/s</option>
          </select>
          <button type="submit" class="btn btn-primary">Save</button>
        </form>
      </div>
      {{ end }}
    </div>
  </div>
</body>

</html>